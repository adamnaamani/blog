<div class="mt-5 flex items-center w-full">
  <%= email_field :subscriber,
                  :email,
                  class: "block w-full !px-4 !rounded-l-full border-0 text-gray-900 dark:text-white dark:bg-slate-700 dark:focus:bg-slate-600 dark:ring-transparent placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-sm leading-6",
                  placeholder: "Type your email" %>
  <%= submit_tag local_assigns[:label].presence || "Subscribe", class: "btn w-auto inline-flex items-center justify-center !rounded-l-none" %>
</div>
<header class="relative flex flex-row items-center px-4 py-2 w-full justify-between">
  <h2>
    <%= link_to "Adam Naamani", root_path, class: "uppercase font-serif font-thin text-[#3A4F66] dark:text-neutral-100 hover:text-opacity-75" %>
  </h2>
  <div class="flex flex-col text-left space-y-2">
    <%= render "partials/flyout" do %>
      <% if user_signed_in? && current_user.admin? %>
        <%= yield %>
        <%= link_to "New Post", new_post_path, data: { turbo_prefetch: false } %>
        <%= link_to "Drafts", "/drafts" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %>
      <% else %>
        <%= link_to "Login", new_user_session_path %>
      <% end %>
    <% end %>
  </div>
</header>

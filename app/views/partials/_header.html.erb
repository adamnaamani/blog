<header class="relative">
  <div class="flex text-center justify-center w-full mb-10 pt-5 space-x-4">
    <%= link_to root_url do %>
      <%= image_tag "https://naamani.s3.ca-central-1.amazonaws.com/photos/0K9A2863Lo.jpg",
                    class: "h-20 w-20 my-4 m-auto rounded-full",
                    alt: "Adam Naamani portrait" %>
      <h1 class="text-sm font-light uppercase tracking-wider"><%= t('name') %></h1>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <div class="fixed top-5 right-5 flex flex-col text-center space-y-2 z-10">
      <%= yield %>
      <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
      <%= form_with scope: :upload,
                    url: uploads_path,
                    data: { controller: "form", action: "input->form#submit" },
                    class: "flex" do |form| %>
        <%= form.label :image, class: "btn btn-primary capitalize w-full" %>
        <%= form.file_field :image, class: "sr-only" %>
      <% end %>
      <%= link_to "Drafts", drafts_path, class: "btn btn-primary" %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "btn btn-primary" %>
    </div>
  <% end %>
</header>
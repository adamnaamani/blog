<% content_for :header do %>
  <%= link_to "Edit", edit_post_path(@post), class: "btn ml-auto mr-2" %>
  <%= link_to "Delete", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn" %>
<% end %>
<div class="h-full py-20">
  <div class="max-w-5xl m-auto p-4 h-full">
    <%= @post.title %>
    <%= @post.content %>
  </div>
</div>
<%= form_with model: @post,
              data: { controller: "form" },
              class: "hidden max-w-3xl m-auto" do |form| %>
  <div class="bg-white dark:bg-gray-700 shadow-xl">
    <div class="p-6 min-h-screen">
      <%= form.text_field :title, placeholder: "Post title", class: "!text-2xl text-center font-bold static" %>
      <%= form.rich_text_area :content %>
    </div>
    <div class="w-full p-6 border-t space-x-1">
      <%= form.submit class: "btn" %>
      <%= form.submit "Save Draft", class: "btn" %>
      <%= form.submit "Schedule Post", class: "btn" %>
    </div>
  </div>
<% end %>
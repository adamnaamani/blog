<%= form_with model: @post, data: { controller: "form" }, class: "hidden" do |form| %>
  <div class="dark:bg-gray-700 mt-10 rounded-t">
    <div class="p-4 min-h-screen">
      <%= form.text_field :title, placeholder: "Post title", class: "!text-2xl text-center font-bold" %>
      <%= form.rich_text_area :content %>
    </div>
    <div class="w-full p-6 border-t space-x-1">
      <%= form.submit class: "btn" %>
      <%= form.submit "Save Draft", class: "btn" %>
      <%= form.submit "Schedule Post", class: "btn" %>
    </div>
  </div>
<% end %>
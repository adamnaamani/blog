<%= form_with model: @post, data: { turbo: false } do |form| %>
  <%= form.text_field :title, placeholder: "Post title", class: "w-full border-0 focus:outline-none" %>
  <%= form.rich_text_area :content %>
  <%= form.submit class: "btn" %>
  <%= form.submit "Schedule Post", class: "ml-5" %>
<% end %>
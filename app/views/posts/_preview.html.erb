<% if local_assigns[:post].present? %>
  <li class="group py-2">
    <%= link_to post.slug, class: "block" do %>
      <div class="w-full flex items-center justify-between">
        <p class="article-link group-hover:text-slate-900 dark:group-hover:text-slate-100 transition-colors duration-200 truncate">
          <%= post.title %>
        </p>
      </div>
    <% end %>
  </li>
<% end %>

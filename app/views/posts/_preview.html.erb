<% if local_assigns[:post].present? %>
  <li class="flex items-center justify-between gap-x-4 py-4 truncate">
    <%= link_to post.slug do %>
      <div class="w-full">
        <div class="flex items-start gap-x-3">
          <p class="font-semibold">
            <%= post.title %>
          </p>
        </div>
        <div class="flex items-center gap-x-2 text-xs/5 text-gray-500">
          <p class="whitespace-nowrap"><%= post.published_date.to_date.to_fs(:long) if post.published_date.present? %></p>
        </div>
      </div>
    <% end %>
  </li>
<% end %>

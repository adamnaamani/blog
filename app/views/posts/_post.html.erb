<div id="<%= dom_id(post) %>">
  <article class="flex flex-col items-start justify-between">
    <div class="flex items-center text-xs">
      <time class="text-gray-500"><%= post.created_at.to_date.to_fs(:long) %></time>
    </div>
    <div class="group relative">
      <h3 class="mt-3">
        <%= link_to post do %>
          <span class="absolute inset-0"></span>
          <%= post.title %>
        <% end %>
      </h3>
      <p class="mt-5">
        <%= post.content %>
      </p>
    </div>
  </article>
</div>
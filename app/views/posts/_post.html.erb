<div id="<%= dom_id(post) %>">
  <article class="flex flex-col justify-between">
    <div class="flex items-center justify-center text-center">
      <time class="text-gray-500 text-sm">
        <%= post.published_date.to_date.to_fs(:long) if post.published_date.present? %>
      </time>
    </div>
    <div class="group relative max-w-3xl">
      <h1 class="text-2xl text-center font-bold mt-2"><%= post.title %></h1>
      <p class="mt-10"><%= post.content %></p>
    </div>
  </article>
</div>
<div class="rounded-md bg-white border dark:border-slate-700 dark:bg-slate-900 dark:text-gray-200 mt-20 pt-5 pb-8 shadow-sm">
  <%= render "partials/subscribe" %>
</div>
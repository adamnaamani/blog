<% content_for :header do %>
  <%= link_to "New Post", new_post_path, class: "btn ml-auto" %>
<% end %>
<div class="bg-white m-auto mt-20">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl">
      <img src="https://naamani.s3.ca-central-1.amazonaws.com/photos/0K9A2863Lo.jpg" alt="" class="h-20 w-20 m-auto mb-5 rounded-full bg-gray-50">
      <h1 class="text-sm sm:text-lg uppercase text-center font-normal tracking-wide text-gray-600"><%= t('name') %></h1>
      <p class="mt-2 text-center leading-8 text-gray-600">
        Owner at <%= link_to "Naamani Real Estate", t("nre"), class: "decorated" %>,
        agent with <%= link_to "eXp Realty", t("exp"), class: "decorated" %>,
        <%= link_to "programmer", t("github"), class: "decorated" %>,
        mixed martial artist.
      </p>
      <%= render "subscribe" %>
      <%= turbo_frame_tag :posts, src: posts_path(format: :turbo_stream) do %>
        <%= render "posts" %>
      <% end %>
    </div>
  </div>
</div>

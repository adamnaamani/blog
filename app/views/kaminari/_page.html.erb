<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
   <span class="<%= page == 1 ? 'rounded-l-md' : '' %> <%= page == total_pages ? 'rounded-r-md' : '' %> bg-indigo-600 dark:bg-indigo-500 px-6 py-4 text-white focus:z-20"><%= page %></span>
 <% else %>
   <%= link_to page, url, remote: remote, rel: page.rel, class: "relative inline-flex items-center px-6 py-4 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 ring-1 ring-inset ring-gray-300 dark:ring-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 focus:z-20 focus:outline-offset-0" %>
 <% end %>

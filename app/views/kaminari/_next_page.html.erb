<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<%= link_to_unless current_page.last?,
                   t('views.pagination.next').html_safe,
                   url,
                   rel: 'next',
                   remote: remote,
                   class: "relative inline-flex items-center rounded-r-md px-6 py-4 bg-white text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0" %>

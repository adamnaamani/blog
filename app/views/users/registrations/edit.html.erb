<div class="flex flex-col items-center justify-center mt-10">
  <div class="w-full bg-white dark:bg-transparent max-w-xl p-6 space-y-4">
    <h1>Manage your account</h1>
    <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |form| %>
      <div class="space-y-4">
        <div class="space-y-2">
          <%= form.label :email %>
          <%= form.email_field :email %>
        </div>
        <div class="space-y-2">
          <%= form.label :password %>
          <%= form.password_field :password %>
        </div>
        <div class="space-y-2">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation %>
        </div>
        <div class="space-y-2">
          <%= form.label :current_password %>
          <%= form.password_field :current_password %>
        </div>
        <div class="space-y-2 pt-2">
          <%= form.submit "Update", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class="space-y-2 text-sm">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
    </div>
  </div>
</div>